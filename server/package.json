    "mongoose": "^5.4.17",
    "morgan": "^1.9.1",
    "nodemailer": "^5.1.1",
    "pm2": "^3.2.2",
    "qr-image": "^3.2.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "async": "^2.6.2",
    "axios": "^0.18.0",
    "chai": "^4.1.2",
    "chalk": "^2.4.2",
    "dotenv-cli": "^1.4.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.0",
    "nyc": "^13.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      "public/**",
      "tests/**",
      "dist/**"
    ]
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "all": false,
    "cache": false,
    "sourceMap": false,
    "instrument": true,
    "report-dir": "./coverage",
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  }
}
